<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragment.findotheruser.FindOtherUsersFragment">

    <EditText
        android:id="@+id/edtFindOtherUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:backgroundTint="@color/l_blue"
        android:hint="@string/find_other_user_here_hint"
        android:inputType="text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvOtherUser"
        android:layout_width="match_parent"
        android:layout_height="600dp" />

    <TextView
        android:id="@+id/tvNoUserFound"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:gravity="center"
        android:textColor="@color/red"
        android:text="@string/no_user_found"
        android:visibility="gone" />
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textAlignment="center"
        android:textColor="@color/l_blue"
        android:textSize="@dimen/large_text"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>