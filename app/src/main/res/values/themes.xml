        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Second Brand Color -->
        <item name="colorSecondary">@color/teal_200</item>
